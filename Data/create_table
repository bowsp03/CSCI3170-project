CREATE TABLE category (
    cID INT NOT NULL ,
    cName VARCHAR(20) NOT NULL UNIQUE,
    PRIMARY KEY (cID),
    CHECK (cID BETWEEN 1 AND 9)
);

CREATE TABLE Manufacturer (
    mID INT NOT NULL PRIMARY KEY,
    mName VARCHAR(20) NOT NULL,
    mAddress VARCHAR(50) NOT NULL,
    mPhoneNumber INT NOT NULL,
    CHECK (mID BETWEEN 1 AND 99),
    CHECK (mPhoneNumber BETWEEN 10000000 AND 99999999)
);

CREATE TABLE part (
    pID INT NOT NULL PRIMARY KEY,
    pName VARCHAR(20) NOT NULL,
    pPrice INT NOT NULL,
    mID INT NOT NULL,
    cID INT NOT NULL,
    pWarrantyPeriod INT NOT NULL,
    pAvailableQuantity INT NOT NULL,
    CHECK (pID BETWEEN 1 AND 999),
    CHECK (pPrice BETWEEN 1 AND 99999),
    CHECK (mID BETWEEN 1 AND 99),
    CHECK (cID BETWEEN 1 AND 9),
    CHECK (pWarrantyPeriod BETWEEN 1 AND 99),
    CHECK (pAvailableQuantity BETWEEN 0 AND 99),
    FOREIGN KEY (mID) REFERENCES manufacturer(mID),
    FOREIGN KEY (cID) REFERENCES category(cID)
);

CREATE TABLE salesperson (
    sID INT NOT NULL PRIMARY KEY,
    sName VARCHAR(20) NOT NULL,
    sAddress VARCHAR(50) NOT NULL,
    sPhoneNumber INT NOT NULL,
    sExperience INT NOT NULL,
    CHECK (sID BETWEEN 1 AND 99),
    CHECK (sPhoneNumber BETWEEN 10000000 AND 99999999),
    CHECK (sExperience BETWEEN 1 AND 9)
);

CREATE TABLE transaction (
    tID INT NOT NULL PRIMARY KEY,
    pID INT NOT NULL,
    sID INT NOT NULL,
    tDate DATE NOT NULL,
    CHECK (tID BETWEEN 1 AND 9999),
    CHECK (pID BETWEEN 1 AND 999),
    CHECK (sID BETWEEN 1 AND 99),
    FOREIGN KEY (pID) REFERENCES part(pID),
    FOREIGN KEY (sID) REFERENCES salesperson(sID)
);
