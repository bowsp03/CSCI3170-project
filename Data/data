CREATE TABLE category(
    cID INT
    cName VARCHAR(20) NOT NULL UNIQUE
);
CREATE TABLE Manufacturer (
    mID INT NOT NULL PRIMARY KEY (mID),
    mName VARCHAR(20) NOT NULL,
    mAddress VARCHAR(50) NOT NULL,
    mPhoneNumber INT NOT NULL,
    CHECK (mID BETWEEN 1 AND 99),
    CHECK (mPhoneNumber BETWEEN 10000000 AND 99999999)
);

CREATE TABLE part (
    pID INT  AUTO_INCREMENT PRIMARY KEY,
    pName VARCHAR(20) NOT NULL,
    pPrice INT NOT NULL,
    mID INT NOT NULL,
    cID INT NOT NULL,
    pWarrantyPeriod INT NOT NULL,
    pAvailableQuantity INT NOT NULL,
    FOREIGN KEY (mID) REFERENCES manufacturer(mID) ON DELETE CASCADE ON UPDATE CASCADE,
    FOREIGN KEY (cID) REFERENCES category(cID) ON DELETE CASCADE ON UPDATE CASCADE,
);
CREATE TABLE salesperson (
    sID INT AUTO_INCREMENT PRIMARY KEY,
    sName VARCHAR(100) NOT NULL,
    sAddress VARCHAR(255) NOT NULL,
    sPhoneNumber BIGINT NOT NULL,
    sExperience INT NOT NULL
);
CREATE TABLE transaction (
    tID INT AUTO_INCREMENT PRIMARY KEY,
    pID INT NOT NULL,
    sID INT NOT NULL,
    tDate DATE NOT NULL,
    FOREIGN KEY (pID) REFERENCES part(pID) ON DELETE CASCADE ON UPDATE CASCADE,
    FOREIGN KEY (sID) REFERENCES salesperson(sID) ON DELETE CASCADE ON UPDATE CASCADE
);